<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/jquery-ui.css">
    @Styles.Render("~/Content/css")
    <link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/buttons.dataTables.css" rel="stylesheet" />
    <link href="~/Content/select.dataTables.css" rel="stylesheet" />
    <link href="~/Content/jquery-confirm.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HEMS Test", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Product", "Products", "Product")</li>
                    <li>@Html.ActionLink("ProductType", "ProductTypes", "ProductType")</li>
                    <li>@Html.ActionLink("ProductCategory", "ProductCategories", "ProductCategory")</li>
                </ul>
            </div>            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script>
        const BaseUrl = window.location.protocol + "//" + window.location.hostname + (window.location.port == 80 ? "" : ":" + window.location.port) + '@Url.RequestContext.HttpContext.Request.ApplicationPath';
    </script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/dataTables.buttons.js"></script>
    <script src="~/Scripts/dataTables.select.js"></script>
    <script src="~/Scripts/jquery-confirm.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
